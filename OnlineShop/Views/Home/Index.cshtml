@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
@foreach (var item in Model)
{
    
        <div class="col-3 dark shadow">
            <img class="card-img-top" src=@item.ImagePath />
            <div class="card-body">
                <a style="color:black" href="/product/index/@item.Id"><h5>@item.Name</h5></a>
                <h5>@item.Cost руб</h5>
                <a href="/cart/add?productId=@item.Id" class="btn btn-primary">Добавить в корзину</a>
            </div>
        </div>
}
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
