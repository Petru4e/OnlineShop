@model Product
@{
    ViewData["Title"] = "Product";
}
<div class="row">
<div class="col-6">
        <img src=@Model.ImagePath class="card-img-top" alt="Горы">

</div>
<div class="col-6">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Cost</p>
    <p class="card-text">@Model.Description</p>
    <a href="/home/index" class="btn btn-primary">Продолжить покупки</a>
    <a href="/cart/add?productId=@Model.Id" class="btn btn-primary">Добавить в корзину</a>
</div>
</div>